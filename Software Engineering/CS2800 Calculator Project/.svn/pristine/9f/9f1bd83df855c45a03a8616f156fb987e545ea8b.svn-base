package calc;

/**
 * The interface for RevPolishCalc and StandardCalc which allows the
 * calculator of String expressions.
 * @author Piravin Satkunarajah
 */

public interface Calculator {

    /**
     *
     * @param what String expressions.
     * @return answer
     * @throws InvalidExpressionException When a invalid expression is used.
     */
    float evaluate(String what) throws InvalidExpressionException;

}
